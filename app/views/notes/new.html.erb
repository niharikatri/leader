<h1>Add Note</h1>

<%= form_with(model: [@lead, @note], local: false, remote: true) do |form| %>
  <div>
    <%= form.label :author %>
    <%= form.text_field :author %>
  </div>

  <div>
    <%= form.label :creation_date %>
    <%= form.datetime_local_field :creation_date %>
  </div>

  <div>
    <%= form.label :note %>
    <%= form.text_area :note %>
  </div>

  <div>
    <%= form.submit 'Add Note' %>
  </div>
<% end %>

<%= link_to 'Back', leads_path %>
